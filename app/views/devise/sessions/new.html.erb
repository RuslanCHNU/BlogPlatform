<h2>Логін</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Пошта %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'fixed-input-title' %>
  </div>

  <div class="field">
    <%= f.label :Пароль %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'fixed-input-title' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Логін", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

