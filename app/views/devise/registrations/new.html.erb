<h2>Зареєструватися</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Пошта %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'fixed-input-title' %>
  </div>

  <div class="field">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'fixed-input-title' %>
  </div>

  <div class="field">
    <%= f.label :Підтвердження_паролю %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'fixed-input-title' %>
  </div>

  <div class="actions">
    <%= f.submit "Зареєструватися", class: 'btn btn-secondary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
